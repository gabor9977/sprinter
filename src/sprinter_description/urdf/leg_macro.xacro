<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- =================================================================== -->
  <!-- LEG MACRO                                                           -->
  <!-- =================================================================== -->
  <xacro:macro name="leg" params="prefix reflect">

    <!-- Hip Joint -->
    <joint name="${prefix}_hip_joint" type="revolute">
      <parent link="base_link"/>
      <child link="${prefix}_thigh_link"/>
      <origin xyz="0 ${0.1 * reflect} 0" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="-1.57" upper="1.57" effort="100" velocity="10"/>
    </joint>

    <!-- Thigh Link - Oberschenkel -->
    <link name="${prefix}_thigh_link">
      <visual>
        <origin xyz="0.05 -0.10 -0.45" rpy="1.5708 0 0"/>
        <geometry>
          <!-- <mesh filename="package://sprinter_description/meshes/Oberschenkel.stl" scale="0.001 0.001 0.001"/> -->
          <box size="0.1 0.1 0.1"/>
        </geometry>
        <material name="Grey"/>
      </visual>
      <collision>
        <origin xyz="0.05 -0.10 -0.45" rpy="1.5708 0 0"/>
        <geometry>
          <!-- <mesh filename="package://sprinter_description/meshes/Oberschenkel.stl" scale="0.001 0.001 0.001"/> -->
          <box size="0.1 0.1 0.1"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="5.0"/>
        <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.01"/>
      </inertial>
    </link>

    <!-- Knee Joint -->
    <joint name="${prefix}_knee_joint" type="revolute">
      <parent link="${prefix}_thigh_link"/>
      <child link="${prefix}_shank_link"/>
      <origin xyz="0 0 -0.45" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="0" upper="2.0" effort="100" velocity="10"/>
    </joint>

    <!-- Shank Link - Bein -->
    <link name="${prefix}_shank_link">
      <visual>
        <origin xyz="0 0 -0.45" rpy="1.5708 0 -1.5708"/>
        <geometry>
          <!-- <mesh filename="package://sprinter_description/meshes/Bein.stl" scale="0.001 0.001 0.001"/> -->
          <box size="0.1 0.1 0.1"/>
        </geometry>
        <material name="Grey"/>
      </visual>
      <collision>
        <origin xyz="0 0 -0.45" rpy="1.5708 0 -1.5708"/>
        <geometry>
          <!-- <mesh filename="package://sprinter_description/meshes/Bein.stl" scale="0.001 0.001 0.001"/> -->
          <box size="0.1 0.1 0.1"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="3.5"/>
        <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.01"/>
      </inertial>
    </link>

  </xacro:macro>

</robot>